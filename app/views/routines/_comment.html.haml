-unless @comment.body.nil?
  %blockquote.comment.span9
    .row-fluid
      %span.pull-left
        =link_to @comment.user.name, @comment.user
      %span.pull-left
        %small{style: "color:#666;margin-left:20px"}
          =distance_of_time_in_words_to_now @comment.created_at
          ago
    .row-fluid{style: "margin-top:10px"}
      =simple_format h( @comment.body )
    -if can? :delete, @comment
      .btn=link_to 'Delete', @comment,
        confirm: 'Are you sure?',
        method: :delete 
